<% include ../partials/header %>
<div class="wholePage">
    <div class="row">
        <% for (var i=0; i<tea.length; i++){ %>
            <div class="col-lg-3">
                <div class="thumbnail">
                    <h4><%= tea[i].Title %></h4>
                    <img src="<%= tea[i].Image %>"><br>
                    <p><strong>Ingredients:</strong><br><%- tea[i].Description.substring(0, 80)%>...</p>
                    <button class="btn btn-xs btn-success"><a class="readMore" href= "/tea/<%= tea[i]._id%>">Continue >>></a></button>
                </div>
            </div>
        <% } %>
    </div>
</div>
 <% include ../partials/footer %>