<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="newform">
            <h1>Edit <%=allcoffee.Title%> Recipe</h1>
            <form action="/coffee/<%=allcoffee._id%>?_method=PUT" method="POST">
                <level>Title</level>
                <div class="form-group">
                    <input class="form-control" type="text" name = "coffee[Title]" value= "<%=allcoffee.Title%>">
                </div>
                <level>Image</level>
                <div class="form-group">
                    <input class="form-control" type="text" name="coffee[Image]" value= "<%=allcoffee.Image%>">
                </div>
                <level>Price</level>
                <div class="form-group">
                    <input class="form-control" type="number" name="coffee[Price]" value= "<%=allcoffee.price%>">
                </div>
                <level>Description</level>
                <div class="form-group">
                    <input class="form-control" type="text" name="coffee[Description]" value= "<%=allcoffee.Description%>">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include  ../partials/footer %>